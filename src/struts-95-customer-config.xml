<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="config-customer95" namespace="/customer_config" extends="json-default">
		<interceptors>
			<interceptor-stack name="jsonStack">
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="json">
					<param name="enableSMD">true</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<global-results>
			
			<result name="error" type="json">
				<param name="errorCode">400</param>
			</result>
			<result name="HibernameException" type="json">
				<param name="errorCode">503</param>
			</result>

		</global-results>
		
		<!-- 发生hibernate运行异常时的响应 -->
		<global-exception-mappings>
			<exception-mapping result="error" exception="java.lang.IllegalArgumentException"></exception-mapping>
			<exception-mapping exception="org.hibernate.HibernateException" result="HibernateException"></exception-mapping>
		</global-exception-mappings>
		
		<!-- 分页的用户端口占用简况 -->
		<action name="query_all_customer_summary" class="com.dhcc.bussiness.sxydidc.customer95.config.actions.CustomerSummaryAction">
			<result name="success" type="json">
				<param name="root">list</param>
				<param name="excludeProperties">
					\[\d+\]\.customer\.contracts
				</param>
			</result>
		</action>
		
		<!-- 新增用户和修改用户名 -->
		<action name="*_customer" class="com.dhcc.bussiness.sxydidc.customer95.config.actions.CustomerAction" method="saveOrUpdate">
			<result name="success" type="json">
				<param name="root">customer</param>
			</result>
		</action>
		
		<!-- 新增用户和修改用户名 -->
		<action name="query_all_device_summary" class="com.dhcc.bussiness.sxydidc.customer95.config.actions.DeviceSummaryAction">
			<result name="success" type="json">
				<param name="root">list</param>
				<param name="includeProperties">
					\[\d+\]\.host\.ipAddress,
					\[\d+\]\.portCount
				</param>
			</result>
		</action>
		
		<!-- 删除单个设备上端口和客户的占用关系 -->
		<action name="unbound_device_interface_for_this_customer" class="com.dhcc.bussiness.sxydidc.customer95.config.actions.DeviceInterfaceAction" method="deleteDeviceInterfaceForThisCustomer">
			<result name="success" type="json"></result>
		</action>
		
		<!-- 删除客户占用的所有端口 -->
		<action name="unbound_all_interface_for_this_customer" class="com.dhcc.bussiness.sxydidc.customer95.config.actions.DeviceInterfaceAction" method="deleteAllInterfaceForThisCustomer">
			<result name="success" type="json">
				
			</result>
		</action>
		
		<!-- 分页设备 -->
		<action name="query_paging_device_detail" class="com.dhcc.bussiness.sxydidc.customer95.config.actions.DeviceDetailAction" method="queryPagingDeviceDetail">
			<result name="success" type="json">
				<param name="ignoreHierarchy">false</param>
				<param name="includeProperties">
					\.list.*,
				 	\.currentPageNumber,
					\.totalCount,
					\.countPerPage,
					\.currentPageStart,
					\.currentPageEnd,
					\.totalPageCount
				</param>
			</result>
		</action>
		
		<!-- 某几个设备的端口占用详情 -->
		<action name="query_some_device_detail" class="com.dhcc.bussiness.sxydidc.customer95.config.actions.DeviceDetailAction" method="querySomeDeviceDetail">
			<interceptor-ref name="jsonStack"></interceptor-ref>
			<result name="success" type="json">
				<param name="root">list</param>
				<param name="ignoreHierarchy">false</param>
			</result>
		</action>
		
		<!-- 绑定端口 -->
		<action name="bound_port" class="com.dhcc.bussiness.sxydidc.customer95.config.actions.TopoInterfaceAction" method="save">
			<result name="success" type="json">
				<param name="root">topoInterface</param>
			</result>
		</action>
		
		<!-- 解绑占用的端口 -->
		<action name="unbound_port" class="com.dhcc.bussiness.sxydidc.customer95.config.actions.TopoInterfaceAction" method="delete">
			<result name="success" type="json">
				<param name="root">topoInterface</param>
			</result>
		</action>
		
		<!-- 单个客户的端口占用简况 -->
		<action name="query_customer_summary_for_this_customer" class="com.dhcc.bussiness.sxydidc.customer95.config.actions.SingleCustomerSummaryAction">
			<result name="success" type="json">
				<param name="root">customerSummary</param>
				<param name="excludeProperties">
					\.contracts.*
				</param>
			</result>
		</action>
	</package>
</struts>
